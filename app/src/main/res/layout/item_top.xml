<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <View
        android:id="@+id/place_v"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/rank_tv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:text="1"
        android:gravity="center"
        android:textSize="10dp"
        android:background="@color/top1Color"
        android:textColor="@color/splitColor"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/place_v"
        android:layout_below="@id/place_v"/>


    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="斗罗大陆"
        android:layout_toRightOf="@id/rank_tv"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/input_size"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/name_tv"
        android:background="@color/splitColor"/>

</RelativeLayout>